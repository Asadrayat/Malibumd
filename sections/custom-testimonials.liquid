{% assign id = section.id %}

<style>
    .coa_contact--{{ id }} {
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
       max-width: 100vw;
       overflow: hidden;
    }
    .container-{{ id }} {
      padding-bottom: 100px;
    }
    .container-{{ id }} svg{
      width: 67px;
      height: auto;
    }
    .container-{{ id }} p{
      margin: 0;
      font-size: 29px;
      text-align: center;
      font-weight: lighter;
      color: rgb(3, 72, 114);
    }

    .info-{{ id }}{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 30px;
    }
    .container-{{ id }} h1{
        font-size: 32px;
        line-height: 38px;
        text-align: center;
        color: rgb(0, 173, 189);
        font-weight: 500;
        margin: 0  0 100px 0;
    }
   .wrapper-{{ id }} {
      position: relative;
      justify-self: center;
      max-width: 300px;
      height: auto;
      background: #F6F6F6;
      display: flex;
      flex-direction: column;
      /* align-items: center; */
      padding: 40px 10px;
      border-radius: 20px;
      transition: all .4s ease-in-out;
      box-sizing: border-box;
      border: 1px solid #0000000a;
   }
    .user_img-{{ id }} {
      width: 85px;
      height: 85px;
      position: absolute;
      top: 0;
      left: 50%;
      transform: translate(-43px, -110px);
    }
    .user_img-{{ id }} img{
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      box-sizing: border-box;
      border-radius: 50%;
      box-shadow: 0px 0px 0px 20px #ffffff;
    }
   .wrapper-{{ id }} p{
      margin: 0;
      font-size: 11px;
      text-align: justify;
      font-weight: lighter;
      color: rgb(117, 117, 117);
   }
   .wrapper-{{ id }} h4{
      margin: 0;
      font-size: 11px;
      text-align: justify;
      font-weight: lighter;
      color: rgb(117, 117, 117);
      border-bottom: 2px solid #00000030;
      padding-bottom: 10px;
   }
   .wrapper-{{ id }}:hover {
      transform: scale(1.1);
   }
   .wrapper-{{ id }} h2{
      font-size: 12px;
      line-height: 14px;
      color: rgb(117, 117, 117);
   }
   .wrapper-{{ id }} h6{
      font-size: 10px;
      line-height: 12px;
      color: rgb(3, 72, 114);
   }
    .prod_img-{{ id }} {
      width: 160px;
      height: 130px;
      box-sizing: border-box;
      position: absolute;
      bottom: 0;
      right: 50%;
      transform: translate(75px, 65px);
    }
    .prod_img-{{ id }} img{
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

   .product-{{ id }} {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 20px;
    }
    .icon-{{ id }} {
      width: 106px;
      height: 15px;
      margin: auto;
     }
    .icon-{{ id }} svg{
      width: 100%;
      height:100%;
     }
    .btn-{{ id }} {
      padding: 2px 10px !important;
      font-size: 10px;
      line-height: 14px;
      width: 70px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #fff;
      text-decoration: none;
      border: 2px solid #084C75;
      color: #084C75;
      border-radius: 10px;
      font-weight: 700;
      transition: all .4s ease;
    }
    .btn-{{ id }}:hover {
      background: #084C75;
      color: #fff;
    }
    .svg-{{ id }} {
      display: flex;
      justify-content: center;
    }

  @media screen and (max-width: 890px){

   .coa_contact--{{ id }} {
     margin-top: {{ section.settings.margin_top-m }}px;
     margin-bottom: {{ section.settings.margin_bottom-m }}px;
     padding-top: {{ section.settings.padding_top-m }}px;
     padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
    }
    .container-{{ id }} svg{
      width: 45px;
    }
    .icon-{{ id }} {
      margin: 0;
     }
    .icon-{{ id }} svg{
      width: 100%;
     }
    .container-{{ id }} .ct_title{
        font-size: 18px;
        line-height: normal;
        margin: 5px 0;
        font-weight: 400;
    }
    .container-{{ id }} p{
      font-size: 11px;
      line-height: 13px;
      margin: 5px 0;
    }
    .container-{{ id }} h1 {
      font-size: 21px;
      line-height: 25px;
      margin: 0 0 30px 0;
    }
    .info-{{ id }}{
      grid-template-columns: 1fr;
      gap: 60px;
      width: unset;
      margin: auto;
    }
    .wrapper-{{ id }} {
      justify-self: end;
      max-width: 330px;
      height: auto;
      margin: 0;
      padding: 10px 10px 10px 50px;
    }
    .user_img-{{ id }} {
      width: 65px;
      height: 65px;
      position: absolute;
      left: 0;
      bottom: 50%;
      transform: translate(-85px, 20px);
    }
    .product-{{ id }} {
      align-items: end;
      gap: 0;
      flex-direction: column;
    }
    .prod_img-{{ id }} {
      width: 160px;
      height: 130px;
      box-sizing: border-box;
      position: absolute;
      bottom: 0;
      left: 0;
      transform: translate(-70px, 40px);
    }
    .user_img-{{ id }} img{
      box-shadow: 0px 0px 0px 10px #ffffff;
    }
     .wrapper-{{ id }} h2{
      font-size: 13px;
      line-height: 16px;
     }
     .wrapper-{{ id }} h4{
      font-size: 8px;
      line-height: 10px;
      color: rgb(89,89,89);
     }
    .btn-{{ id }} {
      font-size: 8px;
      line-height: 10px;
      width: 90px;
    }
  }
</style>

<section class="coa_contact--{{ id }}">
  <div class="container-{{ id }} page-width">
    <div class="svg-{{ id }}">{% render 'all-icons', name: 'heart_skin' %}</div>
    <p class="ct_title">{{ section.settings.title }}</p>
    <h1>{{ section.settings.desc }}</h1>
    <div class="info-{{ id }}">
      {% for block in section.blocks %}
        <div class="wrapper-{{ id }}">
          {% if block.settings.user_img %}
            <div data-aos="fade-up" data-aos-duration="500">
              <div class="user_img-{{ id }}">
                {{
                  block.settings.user_img
                  | image_url: width: block.settings.user_img.width
                  | image_tag: loading: 'lazy'
                }}
              </div>
            </div>
          {% endif %}
          <div class="icon-{{ id }}">{% render 'all-icons', name: 'rating_desktop' %}</div>
          <h2>{{ block.settings.card_title }}</h2>
          <p>{{ block.settings.card_desc }}</p>
          <h4>{{ block.settings.username }}</h4>
          <div class="product-{{ id }}">
            <h6>{{ block.settings.product.title }}</h6>
            <a class="btn-{{ id }}" href="{{ block.settings.product.url }}">
              {{- block.settings.btn_text -}}
            </a>
          </div>
          {% if block.settings.product.featured_image %}
            <div class="prod_img-{{ id }}">
              {{
                block.settings.product.featured_image
                | image_url: width: block.settings.user_img.width
                | image_tag: loading: 'lazy'
              }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

