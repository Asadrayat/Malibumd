<style>
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      overflow: hidden;
      background: #ebf5fa;
      position: relative;
    }
  .section-container--{{ section.id }}  video {
      position: absolute;
      top: 0;
      height: 100%;
      width: 100%;
      object-fit:cover;
      z-index: 1;
      opacity: 0.3;
  }
  .section-container--{{ section.id }}  img {
      position: absolute;
      top: 0;
      right: 0;
      height: 100%;
      width: 100%;
      object-fit:cover;
      z-index: 1;
  }

  .section-wrapper--{{ section.id }} {
      position: relative;
      z-index: 2;
      display: grid;
      grid-template-columns: repeat(2,1fr);
      grid-template-rows: repeat(2,.1fr);
      width: 90%;
  }
  .content-block--{{ section.id }} {
      max-width: 500px;
      grid-column: 1/2;
      grid-row: 1/2;
  }
  .content-block--{{ section.id }} h2 {
      font-size: 45px;
      color: #034872;
      font-weight: 700;
      margin-block: 10px;
  }
  .content-block--{{ section.id }} h3 {
      font-size: 20px;
      color: #00aebf;
      font-weight: 700;
  }
  .content-{{ section.id }} p {
      font-size: 14px;
      color: #034872;
      /* margin-bottom: 50px; */
  }
  .button-wrapper--{{ section.id }} {
      grid-column: 1/2;
      grid-row: 2/-1;
  }
  .image-wrapper--{{ section.id }} {
      grid-column: 2/-1;
      grid-row: 1/-1;
  }
    @media only screen and (max-width: 1500px) and (min-width: 1400px)  {
      /* .section-container--{{ section.id }}  img {
        position: absolute;
        top: -93px;
        right: 0;
        height: 100%;
        width: 100%;
        object-fit: cover;
        z-index: 1;
      } */
    }
    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }
    .section-wrapper--{{ section.id }} {
        gap: 0px;
        grid-template-columns: 1fr;
        grid-template-rows: repeat(3,.1fr);
        width: 90%;
    }
    .content-block--{{ section.id }} {
        max-width: 160px;
    }
    .content-block--{{ section.id }} h2 {
        font-size: 22px;
        margin-block: 10px;
    }
    .content-block--{{ section.id }} h3 {
        font-size: 13px;
    }
    .content-{{ section.id }} p {
        font-size: 10px;
    }
    .button-wrapper--{{ section.id }} {
        /* grid-column: 1/-1;
        grid-row: 3/-1; */
    }
    .image-wrapper--{{ section.id }} {
        /* grid-column: 1/-1;
        grid-row: 2/3; */
    }

    }
</style>
<section class="section-container--{{ section.id }}">
  {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
  {{ section.settings.image | img_url: 'master' | img_tag }}
  <div class="section-wrapper--{{ section.id }} page-width">
    <div class="content-block--{{ section.id }}">
      <h3>{{ section.settings.subtitle }}</h3>
      <h2>{{ section.settings.title }}</h2>
      <div class="content-{{ section.id }}">{{ section.settings.content }}</div>
    </div>
    <div class="button-wrapper--{{ section.id }}">
      <a class="custom-button" href="{{ section.settings.url }}"> {{ section.settings.button_text }} </a>
    </div>
    {% comment %}
      <div class="image-wrapper--{{ section.id }}">
        {{ section.settings.image | img_url: 'master' | img_tag }}
      </div>
    {% endcomment %}
  </div>
</section>

