<style>
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      overflow: hidden;
      background: {{ section.settings.bg-color}};

    }
    .section-container--{{ section.id }} svg {
      max-width: 70px;
      max-height: 70px;
      margin: auto;
      display: block;
    }
   
    .text-block--{{ section.id }} p {
      font-size: 32px;
      font-weight: 100;
      max-width: 600px;
      color: #034872;
      margin: 0 auto;
      text-align: center;
      line-height: 1.3;
    }
    .text-block--{{ section.id }} p a{
      text-decoration : none;
      color : #00adbd;
    }
.section-container--{{ section.id }} .person-wrapper {
    display: flex;
    gap: 20px;
    margin-block: 50px;
}
.section-container--{{ section.id }} .single-person-block {
    text-align: center;
    border-radius: 20px;
    overflow: hidden;
    background-color: #ffffff;
}  
.section-container--{{ section.id }} .single-person-block img {
    width: 100%;
    max-height: 480px;
    object-fit: cover;
}
.section-container--{{ section.id }} .single-person-block:hover .image-wrapper {
    transform: translateY(-45px);
}  
.section-container--{{ section.id }} .single-person-block .image-wrapper {
    transition : 0.3s ease;
}  
.section-container--{{ section.id }} .person-details {
    transform: translateY(-30px);
    transition : 0.3s ease;
}
.section-container--{{ section.id }} .single-person-block:hover .person-details {
    transform: translateY(-75px);
}  
.section-container--{{ section.id }} .single-person-block h5 {
    letter-spacing: 0.25em;
    font-weight: 400;
    color: #000000;
    line-height: 1em;
    font-size: 15px;
    background: #ffffff;
    padding: 10px 30px;
    display: block;
    margin: auto;
    max-width: max-content;
    border-radius: 20px;
}
.section-container--{{ section.id }} .single-person-block h4 {
    font-size: 22px;
    line-height: 1.2em;
    color: #034872;
    margin-block: 10px;
}
.section-container--{{ section.id }} .single-person-block h6 {
    color: #00aebf;
    font-size: 14px;
    margin-block: 10px;
}
.section-container--{{ section.id }} .single-person-block p {
    padding-inline: 10px;
    color: #545454;
    font-size: 12px;
    line-height: 1.4em;
    margin-block: 0px;
}
    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
      }

.text-block--{{ section.id }} p {
      font-size: 26px;
}
.text-block--{{ section.id }} p a{
      display: block;
      font-size: 19px;
}

      
.section-container--{{ section.id }} .person-wrapper {
    flex-direction: column;
    max-width: 80%;
    margin: 30px auto;
}
    }
</style>
<section class="section-container--{{ section.id }}">
  <div class="section-wrapper--{{ section.id }} page-width">
    {% render 'mali-all-icons', name: 'heart' %}
    <div class="text-block--{{ section.id }}">
      {{ section.settings.title }}
    </div>
    <div class="person-wrapper">
      {% for block in section.blocks %}
        <div class="single-person-block">
          <div class="image-wrapper">
            {{ block.settings.image | img_url: 'master'  | img_tag }}
          </div>
          <div class="person-details">
            <h5>{{ block.settings.designation }}</h5>
            <h4>{{ block.settings.title }}</h4>
            <h6>{{ block.settings.academic }}</h6>
            {{ block.settings.message }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Mali Doctors",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
     {
      "type": "color",
      "id": "bg-color",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 50
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top  (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom  (Mobile)",
      "default": 20
    }
  ],
  "blocks": [
    {
      "name": "Person",
      "type": "persron",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation"
        },
        {
          "type": "text",
          "id": "academic",
          "label": "Academics"
        },
        {
          "type": "richtext",
          "id": "message",
          "label": "Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mali Doctors"
    }
  ]
}
{% endschema %}
