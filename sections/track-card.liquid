{% assign id = section.id %}

<style>
    .cc-tarck{{ id }} {
       margin-top: {{ section.settings.margin_top }}px;
       margin-bottom: {{ section.settings.margin_bottom }}px;
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
        background: #FAFAFA;
      }
    .card-{{ id }}{
      width: 330px;
      height: 277px;
      object-fit: cover;
      background: #fff;
      border-radius: 25px;
      box-shadow: 0 0 4px #0000001c;
      padding: 15px 15px 0 15px;
      position: relative;
      box-sizing: border-box;
      overflow: hidden;
    }
    .card-{{ id }} h4{
      font-size: 17px;
      color: rgb(89, 89, 89);
     }
    .card-{{ id }} a,
    .card-{{ id }} h4{
      position: relative;
      z-index: 2;
     }
    .card-{{ id }} a{
      text-decoration: none;
      margin: 0;
      font-size: 14px;
      color: rgb(1, 166, 165);
      cursor: pointer;
     }
    .container-{{ id }} {
      /* background: #ffffff; */
      /* border-radius: 0 0 150px 150px; */
    }
    .wrapper-{{ id }}{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      padding: 40px 0 40px 0;
      justify-items: center;
    }
    .img-{{ id }} img{
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

  @media screen and (max-width: 890px){
     .cc-tarck{{ id }} {
       margin-top: {{ section.settings.margin_top-m }}px;
       margin-bottom: {{ section.settings.margin_bottom-m }}px;
       padding-top: {{ section.settings.padding_top-m }}px;
       padding-bottom: {{ section.settings.padding_bottom-padding_bottom-m }}px;
       
      }
      .container-{{ id }} {
        border-radius: 0;
      }
      .wrapper-{{ id }}{
        grid-template-columns: 1fr;
        gap: 30px;
      }
      .card-{{ id }}{
        /* width: 226px; */
        width: 80%;
        /* height: 150px; */
        height: 200px;
        border-radius: 45px;
      }
    .card-{{ id }} h4{
            width: 70%;
            font-size: 20px;
            margin: 0;
            color: #757575;
            margin-top: 10px;
     }
    .card-{{ id }} a{
      font-size: 14px;
     }
    }
</style>
<!-- Snippet Style Start -->
<style>
  .cc-tarck{{ id }} .icon-title-snippet.text-block {
    text-align: center;
}
  .cc-tarck{{ id }} .icon-title-snippet.text-block img {
    max-width: 50px;
}
  .cc-tarck{{ id }} .icon-title-snippet.text-block h2 {
    font-size: 32px;
    color: #034872;
    font-weight: 600;
    margin-block: 0px;
}
  .cc-tarck{{ id }} .icon-title-snippet.text-block p {
    font-size: 14px;
    color: #000000;
    font-weight: 500;
    margin-block: 0px;
}

 @media screen and (max-width: 768px){
  .cc-tarck{{ id }} .icon-title-snippet.text-block img {
    max-width: 35px;
}
  .cc-tarck{{ id }} .icon-title-snippet.text-block h2 {
    font-size: 30px;
}
  .cc-tarck{{ id }} .icon-title-snippet.text-block p {
    font-size: 13px;
}
   
 }  
</style>
<!-- Snippet Style End -->
<section class="cc-tarck{{ id }}">
  <div class="section-wrapper--{{ section.id }} page-width">
    {% for block in section.blocks %}
      {% if block.type == 'titles' %}
        {% render 'smile-icon-title',
          image: block.settings.image,
          title: block.settings.title,
          subtitle: block.settings.subtitle,
          content: block.settings.content
        %}
      {% endif %}
    {% endfor %}
  </div>

  <div class="container-{{ id }}">
    <div class="wrapper-{{ id }} page-width">
      {% for block in section.blocks %}
        {% if block.type == 'Card' %}
          <div class="card-{{ id }} " data-aos="zoom-in" data-aos-duration="400">
            <h4>{{ block.settings.text }}</h4>
            <a href="/">{{ block.settings.desc }} ></a>
            {% if block.settings.card_img %}
              <div class="img-{{ id }}">
                <img src="{{ block.settings.card_img | image_url: width: block.settings.image.width | image_tag: loading: 'lazy'}}">
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

