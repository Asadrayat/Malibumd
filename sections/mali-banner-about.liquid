<style>
    .section-container--{{ section.id }}{
      margin-top: {{ section.settings.margin_top | append:'px' }};
      margin-bottom: {{ section.settings.margin_bottom | append:'px' }};
      padding-top: {{ section.settings.padding_top | append:'px' }};
      padding-bottom: {{ section.settings.padding_bottom | append:'px' }};
      overflow: hidden;
      position : relative;
      min-height: 100vh;
    }

  .section-container--{{ section.id }} video {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      top: 0;
      z-index: -1;
  }
  .section-container--{{ section.id }} img {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      top: 0;
  }
  .section-wrapper--{{ section.id }} {
      z-index: 0;
      position: relative;
  }
  .section-container--{{ section.id }} h1 {
      font-family: playfair display,serif;
      text-align: center;
      color: #ffffff;
      /* text-wrap: nowrap; */
      width: 750px;
      font-size: 70px;
      z-index: 1;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%,-50%);
  }
  .section-container--{{ section.id }} .bottom-box {
      position: absolute;
      z-index: 1;
      top: 80%;
      left: 50%;
      transform: translate(-50%, -50%);
  }
  .section-container--{{ section.id }} p {
      font-family: kodchasan,serif;
      text-align: center;
      color: #ffffff;
      font-size: 14px;
      font-weight: 600;
      margin: 0;
      letter-spacing: .8px;
  }
  .section-container--{{ section.id }} h6 {
      font-family: kodchasan,serif;
      color: #ffffff;
      text-align: center;
      font-size: 22px;
      margin: 0;
  }
    @media screen and (max-width: 768px){
      .section-container--{{ section.id }}{
        margin-top: {{ section.settings.margin_top_mobile | append:'px' }};
        margin-bottom: {{ section.settings.margin_bottom_mobile | append:'px'  }};
        padding-top: {{ section.settings.padding_top_mobile | append:'px' }};
        padding-bottom: {{ section.settings.padding_bottom_mobile | append:'px' }};
        min-height: 80vh;
      }
  .section-container--{{ section.id }} h1 {
      top: 40%;
      font-size: 36px;
      width: 250px;
  }
  .section-container--{{ section.id }} img {
      object-position: 57% 100%;
  }

    }
</style>
<section class="section-container--{{ section.id }}">
  {{ section.settings.image | img_url: 'master' | img_tag }}
  {{ section.settings.video | video_tag: autoplay: true, loop: true, controls: false }}

  <!-- <div class="section-wrapper--{{ section.id }} page-width"> -->
  <h1>{{ section.settings.title }}</h1>
  <div class="bottom-box">
    <p>{{ section.settings.content1 }}</p>
    <h6>{{ section.settings.content2 }}</h6>
  </div>

  <!-- </div> -->
</section>

